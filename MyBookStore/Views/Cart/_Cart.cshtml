@model List<IBook>
@using MyBookStore.Entities.Interfaces;



<table class="table-responsive table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th style="text-align:right">Price</th>
            <th style="text-align:right">Quantity</th>
            <th style="text-align:right">Vaue</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var book in Model)
            {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td align="right">@book.Price</td>
            <td align="right">@book.CartQuantity</td>
            @{
                decimal price = book.CartQuantity * book.Price;
            }
            <td align="right">@price</td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    No Books Found
                </td>
            </tr>
        }
    </tbody>
</table>